<% provide(:page_title, "Sign up") %>
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= image_tag('covid.png', :class=>"mx-auto h-12 w-auto")%>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign up for your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "sign in if you are already a member", new_user_session_path, :class=>"font-medium text-indigo-600 hover:text-indigo-500"%>
      </p>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:class=>"mt-8 space-y-6") do |f| %>
      <%= f.error_notification %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
              <%= f.input :name,
                placeholder:"Your full name",
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name",:class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" }%>
        </div>
        <div>
              <%= f.input :email,
                placeholder:"Your valid email",
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email",:class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" }%>
        </div>
        <div>
              <%= f.input :contact_number,
                placeholder: "Your contact number",
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "contact_number",:class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" }%>
        </div>
        <div>
              <%= f.input :password,
                label: "Your password",
                placeholder: "Your password",
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "new-password",:class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" }%>
        </div>
        <div>
              <%= f.input :password_confirmation,
                placeholder: "Confirm password",
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "new-password",:class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" }%>
        </div>
      </div>

      <div>
        <%= f.button :submit, "Sign up", :class=>"w-full mt-2 shadow flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
